{
  "watch": [
    "server.js",
    "routes/",
    "models/",
    "middleware/",
    "services/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "test-api.js",
    "*.test.js",
    "*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs"
}

